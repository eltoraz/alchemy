<xs:schema elementFormDefault="qualified"
           xmlns="https://eltoraz.github.io/alchemy"
           xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <xs:element name="potions">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="potion" maxOccurs="unbounded" minOccurs="0">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element type="xs:string" name="description"/>
                            <xs:element name="effects">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="effect">
                                            <xs:complexType>
                                                <xs:simpleContent>
                                                    <xs:extension base="xs:string">
                                                        <xs:attribute type="xs:string" name="type" use="required"/>
                                                        <xs:attribute type="xs:float" name="magnitude" use="optional"/>
                                                        <sd:attribute type="xs:float" name="mult" use="optional"/>
                                                    </xs:extension>
                                                </xs:simpleContent>
                                            </xs:complexType>
                                        </xs:element>
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>
                            <xs:element name="recipe">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="element" maxOccurs="unbounded" minOccurs="0">
                                            <xs:complexType>
                                                <xs:simpleContent>
                                                    <xs:extension base="xs:string">
                                                        <xs:attribute type="xs:string" name="type" use="required"/>
                                                        <xs:attribute type="xs:float" name="min" use="optional"/>
                                                        <xs:attribute type="xs:float" name="max" use="optional"/>
                                                    </xs:extension>
                                                </xs:simpleContent>
                                            </xs:complexType>
                                        </xs:element>
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>
                        </xs:sequence>
                        <xs:attribute type="xs:string" name="name" use="required"/>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>