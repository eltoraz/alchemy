<?xml version="1.0"?>
<potions xmlns="https://eltoraz.github.io/alchemy"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://eltoraz.github.io/alchemy potions.xsd">
    <potion name="healing potion">
        <description>just your average vitality-restoring potion</description>
        <effects>
            <effect>
                <type>restore_health</type>
                <magnitude>25.0</magnitude>
            </effect>
        </effects>
        <recipe>
            <ingredient>
                <element>
                    <type>Water</type>
                    <min>10.0</min>
                    <max>12.0</max>
                </element>
            </ingredient>
            <ingredient>
                <element>
                    <type>Spirit</type>
                    <min>0.1</min>
                    <max>1.0</max>
                </element>
            </ingredient>
        </recipe>
    </potion>
    <potion name="haste salve">
        <description>apply to ankles or equivalent</description>
        <effects>
            <effect>
                <type>haste</type>
                <magnitude>2.0</magnitude>
            </effect>
        </effects>
        <recipe>
            <ingredient>
                <element>
                    <type>Fire</type>
                    <min>5.0</min>
                    <max>10.0</max>
                </element>
            </ingredient>
            <ingredient>
                <element>
                    <type>Storm</type>
                    <min>6.0</min>
                    <max>8.0</max>
                </element>
            </ingredient>
        </recipe>
    </potion>
</potions>